{% extends 'AppBundle::base.html.twig' %}

{% block page_icon %}
    tag
{% endblock %}

{% block page_sub_title %}
    Prekių kategorijų sąrašas
{% endblock %}

{% block page_name %}
    Kategorijos
{% endblock %}

{% block content %}
    <a href="{{ path('category_new') }}">
        <button class="ui basic mini icon button">
            <i class="icon plus"></i>
            Nauja kategorija
        </button>
    </a>

    <br>

    <table class="ui single line small compact table">
        <thead>
        <tr>
            <th>
                <i class="icon tag"></i>
                &nbsp;
                Pavadinimas
            </th>
            <th>
                <i class="icon comment"></i>
                &nbsp;
                Aprašymas
            </th>
            <th width="50px"></th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    {{ category.name }}
                </td>
                <td>
                    {{ category.description }}
                </td>
                <td>
                    <a href="{{ path('category_edit', {'category': category.id}) }}">
                        <button class="ui orange icon mini button">
                            <i class="icon edit"></i>
                            Redaguoti
                        </button>
                    </a>

                    <div class="ui icon top left pointing dropdown mini button">
                        <i class="wrench icon"></i>
                        <div class="menu">
                            <div class="header">Kategorijos nustatymai</div>
                            <div class="item">
                                <a href="{{ path('category_remove', {'category': category.id}) }}">
                                    <i class="icon trash"></i>
                                    Ištrinti
                                </a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}