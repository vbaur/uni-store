{% extends 'AppBundle::base.html.twig' %}

{% block content %}
    <div class="ui stacked segment form">
        <h2 class="ui heading">
            Prisijunkite
        </h2>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form class="ui mini form" action="{{ path('login') }}" method="post">
            <label for="username">Vartotojo vardas:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <br>
            <br>

            <label for="password">Slaptažodis:</label>
            <input type="password" id="password" name="_password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <br>
            <br>

            <button class="ui mini blue button" type="submit">
                Prisijungti
            </button>

            <br>
            <br>

            <p>
                Dar neužsiregistravote? Tai galite padaryti <a href="{{ path('user_registration') }}">čia</a>
            </p>
        </form>
    </div>
{% endblock %}